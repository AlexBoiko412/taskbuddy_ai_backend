{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",

    "baseUrl": "./",
    "paths": {
      "@prisma": ["generated/prisma"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
